<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ask="http://schemas.android.com/apk/res-auto"
    ask:keyHeight="@integer/key_height"
    ask:horizontalGap="@integer/key_horizontal_gap"
    ask:verticalGap="@integer/key_vertical_gap"
    ask:isSymbolsKeyboard="true">

    <!-- Row 1: Currency symbols and special characters -->
    <Row android:rowEdgeFlags="top">
        <Key android:keyLabel="£" android:keyWidth="15%p" android:codes="163" />
        <Key android:keyLabel="€" android:keyWidth="10%p" android:codes="8364" />
        <Key android:keyLabel="¥" android:keyWidth="10%p" android:codes="165" />
        <Key android:keyLabel="¢" android:keyWidth="10%p" android:codes="162" />
        <Key android:keyLabel="©" android:keyWidth="10%p" android:codes="169" />
        <Key android:keyLabel="®" android:keyWidth="10%p" android:codes="174" />
        <Key android:keyLabel="™" android:keyWidth="10%p" android:codes="8482" />
        <Key android:keyLabel="~" android:keyWidth="10%p" android:codes="126" />
        <Key android:keyLabel="¿" android:keyWidth="15%p" android:codes="191" />
    </Row>

    <!-- Row 2: Tab and bracket symbols -->
    <Row>
        <Key android:keyLabel="⇥" android:keyWidth="15%p" android:codes="9" />
        <Key android:keyLabel="[" android:keyWidth="10%p" android:codes="91" />
        <Key android:keyLabel="]" android:keyWidth="10%p" android:codes="93" />
        <Key android:keyLabel="{" android:keyWidth="10%p" android:codes="123" />
        <Key android:keyLabel="}" android:keyWidth="10%p" android:codes="125" />
        <Key android:keyLabel="&lt;" android:keyWidth="10%p" android:codes="60" />
        <Key android:keyLabel="&gt;" android:keyWidth="10%p" android:codes="62" />
        <Key android:keyLabel="^" android:keyWidth="10%p" android:codes="94" />
        <Key android:keyLabel="¡" android:keyWidth="15%p" android:codes="161" />
    </Row>

    <!-- Row 3: 123, backtick, semicolon, division, backslash, vertical bars, special symbols, backspace -->
    <Row>
        <Key android:keyLabel="123" android:keyWidth="15%p" android:codes="@integer/key_code_custom_keyboard_switch" ask:subKeyboard="c5b8c8a0-7b8f-4b8e-8b8f-7b8f4b8e8b9f"/>
        <Key android:keyLabel="`" android:keyWidth="10%p" android:codes="96" />
        <Key android:keyLabel=";" android:keyWidth="10%p" android:codes="59" />
        <Key android:keyLabel="÷" android:keyWidth="10%p" android:codes="247" />
        <Key android:keyLabel="\" android:keyWidth="10%p" android:codes="92" />
        <Key android:keyLabel="|" android:keyWidth="10%p" android:codes="124" />
        <Key android:keyLabel="¦" android:keyWidth="10%p" android:codes="166" />
        <Key android:keyLabel="⌝" android:keyWidth="10%p" android:codes="8991" />
        <Key android:keyLabel="⌫" android:keyWidth="15%p" android:isRepeatable="true" android:codes="@integer/key_code_delete" />
    </Row>

    <!-- Row 4: ABC, spacebar, multiply, section, paragraph, degree, enter -->
    <Row>
        <Key android:keyLabel="ABC" android:keyWidth="15%p" android:codes="@integer/key_code_custom_keyboard_switch" ask:subKeyboard="c5b8c8a0-7b8f-4b8e-8b8f-7b8f4b8e8b8f"/>
        <Key android:keyLabel="␣" android:keyWidth="30%p" android:codes="32" />
        <Key android:keyLabel="×" android:keyWidth="10%p" android:codes="215" />
        <Key android:keyLabel="§" android:keyWidth="10%p" android:codes="167" />
        <Key android:keyLabel="¶" android:keyWidth="10%p" android:codes="182" />
        <Key android:keyLabel="°" android:keyWidth="10%p" android:codes="176" />
        <Key android:keyLabel="↵" android:keyWidth="15%p" android:codes="@integer/key_code_enter" android:keyEdgeFlags="right" />
    </Row>

    <!-- Row 5: Arrow keys -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:keyLabel="↑" android:keyWidth="25%p" android:codes="@integer/key_code_arrow_up" />
        <Key android:keyLabel="↓" android:keyWidth="25%p" android:codes="@integer/key_code_arrow_down" />
        <Key android:keyLabel="←" android:keyWidth="25%p" android:codes="@integer/key_code_arrow_left" />
        <Key android:keyLabel="→" android:keyWidth="25%p" android:codes="@integer/key_code_arrow_right" android:keyEdgeFlags="right" />
    </Row>

</Keyboard>